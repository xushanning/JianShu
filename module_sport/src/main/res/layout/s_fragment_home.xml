            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_sport_type"
                app:layout_constraintStart_toEndOf="@+id/tv_sport_type"
                app:layout_constraintTop_toTopOf="@+id/tv_sport_type"
                app:srcCompat="@drawable/s_vector_triangle" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/s_guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
