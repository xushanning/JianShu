<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintDimensionRatio="1,1"
            app:srcCompat="@drawable/s_img_map_thumb"
            android:id="@+id/s_imageview2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/s_guideline"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/s_guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3"/>

    <TextView
            android:text="@string/res_default_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sport_date"
            app:layout_constraintStart_toStartOf="@+id/s_guideline"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/s_imageview2"
            app:layout_constraintBottom_toBottomOf="@+id/s_imageview2"
            app:layout_constraintVertical_bias="0.0"
            tools:text="2019-07-07 上午 徒步"
            android:layout_marginTop="8dp"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textStyle="bold"
            android:id="@+id/s_textview10"
            app:layout_constraintStart_toStartOf="@+id/tv_sport_date"
            app:layout_constraintEnd_toEndOf="@+id/tv_sport_date"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_sport_date"
            app:layout_constraintHorizontal_bias="0.0"
            tools:text="4.88"
            android:textSize="30sp"/>

    <TextView
            android:text="@string/s_kilometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/s_textview11"
            app:layout_constraintStart_toEndOf="@+id/s_textview10"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/s_textview10"/>

    <TextView
            android:text="@string/res_default_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/s_color_red"
            android:id="@+id/s_textview12"
            android:typeface="serif"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/s_textview11"
            app:layout_constraintStart_toStartOf="@+id/s_guideline"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textSize="25sp"
            tools:text="14"
            app:layout_constraintHorizontal_bias="0.6"/>

    <TextView
            android:text="@string/s_centigrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/s_color_red"
            android:id="@+id/s_textview13"
            app:layout_constraintBaseline_toBaselineOf="@+id/s_textview12"
            app:layout_constraintStart_toEndOf="@+id/s_textview12"
            />

    <TextView
            android:text="@string/res_default_0"
            android:textColor="@color/res_99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/s_textview14"
            app:layout_constraintBottom_toBottomOf="@+id/s_imageview3"
            app:layout_constraintTop_toTopOf="@+id/s_imageview3"
            app:layout_constraintStart_toEndOf="@+id/s_imageview3"
            android:layout_marginStart="2dp"
            app:layout_constraintVertical_bias="0.68"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/s_vector_comment"
            android:id="@+id/s_imageview3"
            app:layout_constraintStart_toStartOf="@+id/s_textview10"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/s_textview10"
            app:layout_constraintEnd_toEndOf="@+id/s_textview10"
            app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/s_vcetor_thumbs_up"
            android:id="@+id/s_imageview4"
            app:layout_constraintStart_toEndOf="@+id/s_imageview2"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/s_imageview3"
            app:layout_constraintBottom_toBottomOf="@+id/s_imageview3"
            app:layout_constraintHorizontal_bias="0.4"/>

    <TextView
            android:text="@string/res_default_0"
            android:textColor="@color/res_99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/s_textview15"
            app:layout_constraintStart_toEndOf="@+id/s_imageview4"
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="@+id/s_imageview4"
            app:layout_constraintBottom_toBottomOf="@+id/s_imageview4"
            app:layout_constraintVertical_bias="0.53"/>

</androidx.constraintlayout.widget.ConstraintLayout>
