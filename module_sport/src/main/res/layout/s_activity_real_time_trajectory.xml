<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.amap.api.maps.MapView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/mv_real_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <View
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:id="@+id/v_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="40dp"
                android:background="@drawable/s_circle_white"
                android:layout_height="40dp"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/s_vector_triangle"
                android:id="@+id/s_imageview"
                app:layout_constraintEnd_toEndOf="@+id/v_back"
                app:layout_constraintStart_toStartOf="@+id/v_back"
                app:layout_constraintBottom_toBottomOf="@+id/v_back"
                app:layout_constraintTop_toTopOf="@+id/v_back"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
            app:behavior_hideable="true"
            android:id="@+id/sv_bottom_sheet"
            app:behavior_peekHeight="90dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_head"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="90dp">

                <LinearLayout
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:id="@+id/ll_pull_up"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:id="@+id/img_pull_up"
                            app:srcCompat="@drawable/s_vector_pull_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:background="@android:color/white"
                        app:layout_constraintTop_toBottomOf="@+id/ll_pull_up"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="0dp">

                    <TextView
                            android:text="0.00"
                            android:textSize="30sp"
                            android:textColor="@color/s_main_tab_select"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/s_textview3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/s_textview2"
                            app:layout_constraintStart_toEndOf="@+id/s_textview3"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintEnd_toStartOf="@+id/s_textview4"
                            app:layout_constraintBottom_toBottomOf="@+id/s_textview3"/>

                    <TextView
                            android:text="0.00"
                            android:textColor="@color/s_main_tab_select"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/s_textview3"
                            android:textSize="30sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintEnd_toStartOf="@+id/s_textview2"/>

                    <TextView
                            android:text="00:00"
                            android:textColor="@color/s_main_tab_select"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/s_textview2"
                            android:textSize="30sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/s_textview4"
                            app:layout_constraintStart_toEndOf="@+id/s_textview2"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintBottom_toBottomOf="@+id/s_textview2"/>

                    <TextView
                            android:text="@string/s_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/s_textview5"
                            app:layout_constraintTop_toBottomOf="@+id/s_textview3"
                            app:layout_constraintEnd_toEndOf="@+id/s_textview3"
                            app:layout_constraintStart_toStartOf="@+id/s_textview3"/>

                    <TextView
                            android:text="@string/s_mileage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/s_textview6"
                            app:layout_constraintEnd_toEndOf="@+id/s_textview2"
                            app:layout_constraintStart_toStartOf="@+id/s_textview2"
                            app:layout_constraintTop_toTopOf="@+id/s_textview5"
                            app:layout_constraintBottom_toBottomOf="@+id/s_textview5"/>

                    <TextView
                            android:text="@string/s_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/s_textview7"
                            app:layout_constraintStart_toStartOf="@+id/s_textview4"
                            app:layout_constraintEnd_toEndOf="@+id/s_textview4"
                            app:layout_constraintTop_toTopOf="@+id/s_textview6"
                            app:layout_constraintBottom_toBottomOf="@+id/s_textview6"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                    android:layout_width="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="这个是下面的"
                    android:textColor="#fff"
                    android:background="@color/design_default_color_primary"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/cl_head"
                    android:layout_height="300dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
