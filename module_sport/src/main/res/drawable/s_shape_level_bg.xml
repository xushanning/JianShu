<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:dither="true">
            <solid android:color="#ffffff" />
            <corners android:radius="5dp" />
            <stroke
                android:width="1dp"
                android:color="@color/s_color_blue" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape>
            <solid android:color="@color/s_color_blue" />
            <corners android:radius="5dp" />
            <size
                android:width="10dp"
                android:height="5dp" />
        </shape>
    </item>
</layer-list>