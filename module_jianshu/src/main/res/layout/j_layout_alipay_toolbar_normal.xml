<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_add"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/j_zfb_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_person_center"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/j_zfb_person_center"
        app:layout_constraintBottom_toBottomOf="@+id/img_add"
        app:layout_constraintEnd_toStartOf="@+id/img_add"
        app:layout_constraintTop_toTopOf="@+id/img_add" />

    <View
        android:id="@+id/v_search"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/j_shape_zfb_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_person_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/j_vector_zfb_search"
        app:layout_constraintBottom_toBottomOf="@+id/v_search"
        app:layout_constraintStart_toStartOf="@+id/v_search"
        app:layout_constraintTop_toTopOf="@+id/v_search" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="饿了吗"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/v_search"
        app:layout_constraintStart_toEndOf="@+id/img_search"
        app:layout_constraintTop_toTopOf="@+id/v_search" />

    <ImageView
        android:id="@+id/img_microphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="@dimen/dp_10"
        android:src="@drawable/j_vector_zfb_microphone"
        app:layout_constraintBottom_toBottomOf="@+id/v_search"
        app:layout_constraintEnd_toEndOf="@+id/v_search"
        app:layout_constraintTop_toTopOf="@+id/v_search" />

    <View
        android:id="@+id/v_bg1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
